.filters {
	$verticalPadding: 15px;
	$horizontalPadding: 30px;

	background-color: $colors.white;
	min-height: 60rem;
	padding: $verticalPadding $horizontalPadding;
	position: relative;
	&__title {
		spaced(0);
		font-size: 2.4rem;
		font-weight: 500;
		padding-bottom: 1rem;
	}
	&__clear {
		absolute(calc($verticalPadding + 12px), $horizontalPadding);
		font-size: 1.3rem;
	}
}