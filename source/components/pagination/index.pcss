.pagination {
	centeredBlock(50);
	spaced(2);
	font-size: 1.5rem;
	&__wrapper {
		flexContainer();
		align-items: baseline;
		justify-content: space-around;
	}
	&__link {
		circle(3.1);
		flexContainer();
		margin(horizontal, 1);
		align-items: center;
		justify-content: center;
		line-height: 1em;
		text-align: center;
		&.-current {
			margin(horizontal, .5);
			border: .1rem solid $colors.blue;
			color: $colors.blue;
		}
	}
	&__page {
		margin(auto, 0);
	}
	&__pages {
		flexContainer();
		justify-content: space-around;
		&-item {
			color: $colors.darkestGray;
		}
	}
}