{% if pjax %}
    {% extends 'layouts/pjax.njk' %}
{% else %}
    {% extends 'layouts/master.njk' %}
{% endif %}

{% block content %}
    <div class="l-product-index">
        <div class="l-product-index__sidebar js-sidebar">
            <div class="l-product-index__sidebar-toggle js-sidebar-toggle"></div>
            <div class="js-filters"></div>
        </div>
        <main role="main" class="l-product-index__content js-content">
            <div class="l-product-index__actions">
                {% include 'components/breadcrumbs.njk' %}
                <button type="button" class="button colored-button -small js-sidebar-toggle sidebar__toggle-button">Filter</button>
            </div>
            {% if products.length %}
                <div class="l-products">
                    {% for product in products %}
                        {% include 'components/product-card.njk' %}
                    {% endfor %}
                </div>
            {% else %}
                <h2>No results!</h2>
            {% endif %}
        </main>
        {% include 'components/pagination.njk' %}
    </div>
{% endblock %}
