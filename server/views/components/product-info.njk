<div class="product-info">
	<div class="product-info__left">
		{% include 'components/image-gallery.njk' %}
	</div>
	<div class="product-info__right">
		<div class="product-info__meta">
			<h1 class="product-info__title">{{ product.title }}</h1>
			<a href="/products?category[]={{ product.category.slug }}">
				<h4 class="product-info__subtitle">{{ product.category.title }}</h4>
			</a>
			<div class="product-info__price">${{ product.price }}</div>
			<p>{{ product.description }}</p>
		</div>
		<div class="product-info__product-options">
			<div class="js-product-options"></div>
		</div>
	</div>
</div>
<meta data-set="product" data-value="{{ product|dump }}">